import tkinter as tk

def tirer(i, j, tableau):
    """Logique pour tirer sur une case"""
    bouton = fenetre.grid_slaves(row=i, column=j)[0] 
    couleurs = {"E": ("O", "cornflowerblue"), "B": ("X", "red")}
    text, bg = couleurs.get(tableau[i][j], ("!", "yellow"))
    bouton.config(text=text, bg=bg)


# Créer la fenêtre principale Tkinter
fenetre = tk.Tk()
fenetre.title("Bataille Navale")

# Tableau de jeu 10x10
tableau = [["E"] * 10 for _ in range(10)]

# Création de la grille de boutons
for i in range(10):
    for j in range(10):
        tk.Button(fenetre, text=" ", width=4, height=2, 
                  command=lambda i=i, j=j: tirer(i, j, tableau)).grid(row=i, column=j)

# Lancer l'application Tkinter
fenetre.mainloop()

# ATTENTION :
# command = lambda, pas facile à comprendre... On peut faire sans ?
